<h2><%= @question.content %></h2>

Tags:
<ul>
  <% @question.tags.each do |tag| %>
    <li>
      <%= tag.name %>
    </li>
  <% end %>
</ul>


<%= form_for([@question, Answer.new()]) do |f| %>

<p>
  <%= f.label :content %>
  <%= f.text_area :content %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>

<% unless @question.answers.empty? %>
  <ul>
    <% @answers_sorted.each do |answer| %>
      <li> <%= answer.content %> | LIKES: <%=answer.count_total_likes %>
      <%= link_to "Vote Up", vote_up_path(:answer_id => answer.id, :question_id => @question.id), method: :post  %> /
      <%= link_to "Vote Down", vote_down_path(:answer_id => answer.id, :question_id => @question.id), method: :post  %>
      </li>
    <% end %>
  </ul>
<% end %>
