<div class="editAnswer">
<h3><%= @question.title %></h3>
<p><%= @question.content %></p>

Tags:
<ul class="tagsList">
  <% @question.tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag %>
    </li>
  <% end %>
</ul>

<%= form_for [@question, @answer] do |f| %>

<p>
  <%= f.label :content %> <br>
  <%= f.text_area :content %>
</p>

<p>
  <%= f.submit "Update", :class => "submitButton" %>
</p>

<% end %>
</div>