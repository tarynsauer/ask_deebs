

<%if @user %>
  <%= link_to @user.name, @user %>
  <%= @user.email %>
  <% end %>

<% if logged_in? %>
  <h3 class="ask-question"><%= link_to "Ask A Question", new_question_path %></h3>
<% else %>
  <h4> <a class='sign-in' href='/signin'>Sign In to Ask a Question</a> </h4>
<% end %>

<%= form_tag root_path, :method => 'get', class: "search" do %>
<p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
</p>
<% end %>



<% if current_user %>
  <h2>Your Questions</h2>
    <ul>
      <% if @user.questions.empty? %>
        <p>You have no questions.</p>
      <% else %>
        <% @user.questions.each do |question| %>
          <li> <%= link_to question.content, question %></li>
        <% end %>
      <% end %>
    </ul>

<% end %>

<h2>All Questions</h2>

<ul class="question_list">
  <% @questions.each do |question| %>
    <li> <%= link_to question.content, question %></li>
  <% end %>
</ul>

<% if @answers %>
  <h2>Answer Matches</h2>

  <ul class="answer_list">
    <% @answers.each do |answer| %>
      <li> <%= answer.content %></li>      
    <% end %>
  </ul>

<% end %>



<h2>Tags</h2>
<div id='tagCloud'>
  <% @tags.each do |tag| %>
    <%= link_to tag.name, tag, data: { count: tag.taggings_count} %>
  <% end %>
</div>



