<h1>Ask Deebz</h1>

<%if @user %>
  <%= @user.name %>
  <%= @user.email %>
  <% end %>

<h3><%= link_to "Ask A Question", new_question_path %></h3>

<%= form_tag root_path, :method => 'get' do %>
<p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
</p>
<% end %>

<h2>Questions</h2>
<ul class="question_list">
  <% @questions.each do |question| %>
    <li> <%= link_to question.content, question %></li>      
  <% end %>
</ul>



