<div id="index-top"> 
  <%if @user %>
    <%= link_to @user.name, @user %>
    <%= @user.email %>
  <% end %>

  <h3><%= link_to "Ask A Question", new_question_path %></h3>


  <%= form_tag root_path, :id => "search_form", :method => 'get' do %>
  <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
  </p>
  <% end %>



  <% if current_user %>
    <h2>Your Questions</h2>
      <ul>
        <% if @user.questions.empty? %>
          <p>You have no questions.</p>
        <% else %>
          <% @user.questions.each do |question| %>
            <li> <%= link_to question.content, question %></li>
          <% end %>
        <% end %>
      </ul>
  <% end %>

</div>


<h2>All Questions</h2>


<div id="live-search">
  <%= render "live_search", 
      :object => @questions, 
      :object => @answers    %>
</div>







